# Campus Event System - Environment Variables
# Copy this file to .env and update values for your environment

# Environment Type
# Options: development, staging, production
ENVIRONMENT=development

# API Configuration
# Override the API base URL from config.ini
API_BASE_URL=http://localhost:8080/api
API_TIMEOUT=30

# Logging Configuration
# Override logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Security
# Secret key for encryption (generate a secure random key)
SECRET_KEY=your-secret-key-here-change-in-production

# Session Configuration
SESSION_TIMEOUT=30

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false

# Performance
PERFORMANCE_MONITORING=true

# Database (for local caching)
DATABASE_URL=sqlite:///cache/local_cache.db

# Optional: External Services
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Analytics
# ANALYTICS_ENABLED=false
# ANALYTICS_KEY=your-analytics-key

# ============================================
# PRODUCTION EXAMPLE
# ============================================
# ENVIRONMENT=production
# API_BASE_URL=https://api.campusevents.edu/api
# LOG_LEVEL=WARNING
# DEBUG=false
# SECRET_KEY=generate-secure-random-key-here

# ============================================
# STAGING EXAMPLE
# ============================================
# ENVIRONMENT=staging
# API_BASE_URL=https://staging-api.campusevents.edu/api
# LOG_LEVEL=INFO
# DEBUG=true
